#include <stdio.h>
#include <string.h>

int main() {

    // Funni Mad Labs Game


    char noun[50] = "";
    char verb[50] = "";
    char adjective1[50] = "";
    char adjective2[50] = "";
    char adjective3[50] = "";

    //promps 
    
    printf("Coloque um adjetivo: ");
    fgets(adjective1, sizeof(adjective1), stdin);
    adjective1[strlen(adjective1) - 1] = '\0';

    printf("Agora um substantivo(animal ou pessoa): ");
    fgets(noun, sizeof(noun), stdin);
    noun[strlen(noun) - 1] = '\0';

    printf("Coloque outro adjetivo: ");
    fgets(adjective2, sizeof(adjective2), stdin);
    adjective2[strlen(adjective2) - 1] = '\0';

    printf("Um verbo agora (ação presente): ");
    fgets(verb, sizeof(verb), stdin);
    verb[strlen(verb) - 1] = '\0';

    printf("Último adjetivo: ");
    fgets(adjective3, sizeof(adjective3), stdin);
    adjective3[strlen(adjective3) - 1] = '\0';

    printf("\nEu estava andando num Parque %s. \n", adjective1);
    printf("Quando de repente um %s pulou em mim. \n", noun);
    printf("O %s estava %s e %s! \n", noun, verb, adjective2);
    printf("Eu fiquei %s, comecei a correr e quase tropecei", adjective3);


    return 0;
}
